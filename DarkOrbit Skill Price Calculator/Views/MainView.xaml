<UserControl x:Class="DarkOrbitSkillPriceCalculator.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ViewModels="clr-namespace:DarkOrbitSkillPriceCalculator.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance ViewModels:MainViewModel}"
             FontSize="16">
    <StackPanel>
        <Image Source="{StaticResource Logo}" Height="140"
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Text="Skill Price Calculator" FontSize="38"
                   FontWeight="DemiBold" Foreground="DodgerBlue"
                   HorizontalAlignment="Center" Margin="5"/>
        
        <ItemsControl x:Name="InputForms" HorizontalAlignment="Center"/>
        
        <ItemsControl x:Name="Outputs" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>